<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFApp.CustomControl">

    <ControlTemplate x:Key="NormalControlTemplate" TargetType="{x:Type local:TipBar}">
        <Grid Name="PART_GridMain" RenderTransformOrigin="0.5,0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="{TemplateBinding MaxWidth}" />
                </TransformGroup>
            </Grid.RenderTransform>
            <Border
                Margin="{TemplateBinding Padding}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="2"
                CornerRadius="{TemplateBinding CornerRadius}">
                <Border.Effect>
                    <BlurEffect Radius="8" />
                </Border.Effect>
            </Border>
            <Border
                Margin="{TemplateBinding Padding}"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="{TemplateBinding CornerRadius}">
                <TextBlock
                    x:Name="MsgTextBlock"
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontFamily="{TemplateBinding FontFamily}"
                    FontSize="{TemplateBinding FontSize}"
                    FontStretch="{TemplateBinding FontStretch}"
                    FontWeight="{TemplateBinding FontWeight}"
                    Foreground="{TemplateBinding Foreground}"
                    Text="{TemplateBinding Text}"
                    TextWrapping="Wrap" />
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="MainWindowControlTemplate" TargetType="{x:Type local:TipBar}">
        <Grid Name="PART_GridMain" RenderTransformOrigin="0.5,0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Border
                Grid.Column="0"
                Margin="{TemplateBinding Padding}"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="{TemplateBinding CornerRadius}">
                <StackPanel
                    Height="58"
                    Margin="20,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Border VerticalAlignment="Stretch">
                        <Viewbox
                            Width="20"
                            Margin="0,-3,0,0"
                            HorizontalAlignment="Right">
